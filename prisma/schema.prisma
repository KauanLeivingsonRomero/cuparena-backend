generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id        Int      @id @default(autoincrement())
  name           String?
  email          String   @unique
  password       String
  role           Role     @default(USER)
  createdAt      DateTime @default(now()) @map("created_at")
  profilePicture String?  @map("profile_picture") @default("https://res.cloudinary.com/dyy3xczzw/image/upload/v1728680666/user-icon_xkcbjw.png")

  @@map("users")
}

enum Role {
  USER
  CREATOR
  ADMIN
}
